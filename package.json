{
    "name": "phaser",
    "version": "3.0.0",
    "description": "Next generation ES6 Phaser",
    "main": "index.js",
    "scripts": {
       "test": "ava"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/photonstorm/phaser.git"
    },
    "keywords": [
        "game",
        "html5",
        "webgl",
        "canvas",
        "es6",
        "modules",
        "physics",
        "webaudio",
        "retro"
    ],
    "author": "Richard Davey",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/photonstorm/phaser/issues"
    },
    "homepage": "https://github.com/photonstorm/phaser#readme",
    "devDependencies": {
        "ava": "^0.15.2",
        "babel": "^6.5.2",
        "babel-cli": "^6.10.1",
        "babel-core": "^6.10.4",
        "babel-eslint": "^6.1.2",
        "babel-polyfill": "^6.9.1",
        "babel-preset-es2015": "^6.9.0",
        "buble": "^0.12.5",
        "eslint": "^3.0.1",
        "jsdoc": "^3.4.0",
        "rollup": "^0.34.1",
        "rollup-plugin-buble": "^0.12.1",
        "typescript": "^1.8.10"
    },
    "eslintConfig": {
        "globals": {
            "jQuery": true
        },
        "env": {
            "browser": true,
            "node": false,
            "es6": true
        },
        "ecmaFeatures": {
            "arrowFunctions": true,
            "binaryLiterals": true,
            "blockBindings": true,
            "classes": true,
            "defaultParams": true,
            "destructuring": true,
            "forOf": false,
            "generators": true,
            "modules": true,
            "spread": true,
            "jsx": true
        },
        "parser": "babel-eslint",
        "rules": {
            "array-bracket-spacing": "always",
            "block-spacing": "always",
            "brace-style": [2, "allman", { "allowSingleLine": true }],
            "camelcase": [2, {"properties": "always"}],
            "comma-dangle": [2, "never"],
            "comma-spacing": [2, {"before": false, "after": true}],
            "comma-style": [2, "last"],
            "quotes": [1, "single"],
            "no-alert": "error"
        }
    }
}
